# Copy this file to .env and set real values. Do NOT commit .env with secrets.

# Admin password used by the web login
ADMIN_PASSWORD=change-me

# Secret key for signing session cookies
SECRET_KEY=change-me-secret

# Database connection string (SQLAlchemy URI). Examples:
# - SQLite (local file): sqlite:///app.db
# - SQL Server: mssql+pyodbc://user:pass@server/db?driver=ODBC+Driver+17+for+SQL+Server
DATABASE_URL=sqlite:///app.db

# Python executable used to run the prepare-list CLI (optional)
PYTHON_EXECUTABLE=python

# Optional: override the default lists/content folders (paths relative to project root)
LISTS_FOLDER=lists
CONTENT_FOLDER=content

# Cookie name for session
SESSION_COOKIE_NAME=session

# Defaults for the prepare-list CLI (used when CLI args are omitted)
# Input: folder containing template Excel files (relative to project root)
PREP_INPUT=lists/templates
# Output: folder where generated files will be written
PREP_OUTPUT=lists/output
# Schema file used by prepare-list
PREP_SCHEMA=prepare-lists/schema.json
# SQL query file used by prepare-list
PREP_SQL=sql-scripts/extract_query.sql
PREP_LOOKUP=lists/lookup
